{
  "name": "@ans/ctx-shared",
  "version": "1.0.0",
  "description": "Shared bounded context with common utilities",
  "author": "Carlos Juega",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist/"
  ],
  "typesVersions": {
    "*": {
      "dist/index.d.ts": [
        "dist/index.d.ts"
      ],
      "*": [
        "dist/*"
      ]
    }
  },
  "exports": {
    ".": "./dist/index.js",
    "./": "./dist/"
  },
  "scripts": {
    "precommit": "npx lint-staged",
    "lint": "npx eslint . --ext .js,.ts",
    "test": "yarn test:unit",
    "test:unit": "NODE_ENV=test jest --verbose --passWithNoTests",
    "build": "yarn build:clean && yarn build:tsc",
    "build:clean": "rm -r dist; exit 0",
    "build:tsc": "tsc && tscpaths -p tsconfig.json -s ./src -o ./dist"
  },
  "devDependencies": {
    "@types/faker": "^5.5.9",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.9",
    "@types/uuid": "^8.3.3",
    "@types/uuid-validate": "^0.0.1",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.2.4",
    "eslint-plugin-module-resolver": "^1.4.0",
    "jest": "^27.3.1",
    "lint-staged": "^12.0.3",
    "ts-jest": "^27.0.7",
    "tscpaths": "^0.0.9",
    "typescript": "^4.5.2",
    "typescript-eslint": "^0.0.1-alpha.0"
  },
  "dependencies": {
    "faker": "^5.5.3",
    "uuid": "^8.3.2",
    "uuid-validate": "^0.0.3"
  }
}
